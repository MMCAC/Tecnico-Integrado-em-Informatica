programa
{
	funcao inicio()
	{
		inteiro n

		escreva("Informe o número: \n")
		leia(n)

		se(n%2==0)
		{
			escreva("O número é par!")
		}
		senao
		{
			escreva("O número é ímpar!")
		}
	}
}
